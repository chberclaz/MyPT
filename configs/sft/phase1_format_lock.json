{
  "name": "Phase 1: Format Lock",
  "description": "Teaches model to respect <myPT_assistant>...</myPT_assistant><myPT_eot> structure. Ultra-short responses, synthetic templates.",

  "batch_size": 8,
  "block_size": 4096,
  "vocab_size": 50304,
  "n_embd": 1280,
  "n_head": 20,
  "n_layer": 32,
  "dropout": 0.10,
  "bias": false,
  "tie_weights": true,
  "pos_encoding": "rope",
  "mlp_type": "swiglu",
  "norm_type": "rmsnorm",
  "rope_theta": 10000.0,
  "rope_scale": 4.0,

  "learning_rate": 7e-5,
  "max_iters": 300,
  "eval_interval": 25,
  "warmup_iters": 20,
  "use_amp": true,
  "amp_dtype": "bf16",
  "grad_accum_steps": 2,

  "use_loss_mask": true,

  "batch_sampling_mode": "epoch",
  "pad_token_id": null,
  "episode_min_tokens": 10,
  "epoch_seed": 4501,
  "epoch_shuffle": true,
  "epoch_drop_last": true,

  "weight_decay": 0.05,

  "eval_sets": null,
  "eval_seed": 1337,
  "log_file": "logs/train/phase1_format_lock.jsonl"
}
