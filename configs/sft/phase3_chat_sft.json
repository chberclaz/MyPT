{
  "name": "Phase 3: Chat SFT",
  "description": "Conversational fine-tuning on gold bilingual (EN+DE) Q&A episodes with RAG context. Introduces user_context and assistant_context patterns.",

  "batch_size": 10,
  "block_size": 1024,
  "vocab_size": 50304,
  "n_embd": 1280,
  "n_head": 20,
  "n_layer": 32,
  "dropout": 0.12,
  "bias": false,
  "tie_weights": true,
  "pos_encoding": "rope",
  "mlp_type": "swiglu",
  "norm_type": "rmsnorm",
  "rope_theta": 10000.0,

  "learning_rate": 3e-5,
  "max_iters": 5000,
  "eval_interval": 500,
  "save_every": 1000,
  "warmup_iters": 150,
  "use_amp": true,
  "amp_dtype": "bf16",

  "use_loss_mask": true,

  "batch_sampling_mode": "epoch",
  "pad_token_id": null,
  "episode_min_tokens": 10,
  "epoch_seed": 3301,
  "epoch_shuffle": true,
  "epoch_drop_last": true,

  "weight_decay": 0.05,

  "eval_sets": {
    "phase1_format": "data/sft_phase1_format_lock",
    "phase2_operators": "data/sft_phase2_operators"
  },
  "eval_seed": 1337,
  "log_file": "logs/train/phase3_chat_sft.jsonl"
}
